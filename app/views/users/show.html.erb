<header>
	<h2><%= @user.full_name %></h2>
    <div class=friend_request>
      <% if @user != current_user %>
        <%= render :partial => "friend_requests/form", :locals => {:user => @user} %>
      <% end %>
    </div>
    <div>
			<%= "#{@profile.city}" %>
		</div>
		<div>
			<%= "#{@profile.state}" %>
		</div>
		<div>
			<%= "#{@profile.country}" %>
		</div>
		<section class="bio">
			<div>
				<%= "#{@profile.bio}" %>
			</div>
		</section>
    <section class="friends">
      <h3>friends</h3>
      <ul>
        <% @user.friends.each do |friend| %>
          <li>
            <%= link_to friend.full_name, user_url(friend) %>
          </li>
        <% end %>
      </ul>
    </section>
    <section class="friend_requests">
      <% if @user == current_user %>
        <%= render :partial => "friend_requests/list", :locals => {:user => @user} %>
      <% end %>
    </section>
		<div>
      <% if @user == current_user %>
		    <%= link_to "Edit your profile", "/users/#{@user.id}/profile/edit" %>
      <% end %>
		</div>
</header>