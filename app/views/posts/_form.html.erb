<h2>What's on your mind?</h2>

<%= form_for Post.new, :url => "/users/#{current_user.id}/posts" do |f| %>

  <div>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  </div>

  <div>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
  </div>

  <div>
  <%= f.submit "SUBMIT POST" %>
  </div>

<% end %>