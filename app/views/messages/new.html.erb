<%= form_for @message, :url => user_messages_url(current_user), :method => :post do |f| %>

  <%= f.label "To" %>
  <%= f.select(:recipient_id, @users) %><br>

  <%= f.label :subject %>
  <%= f.text_field :subject %><br>

  <%= f.label :content %><br>
  <%= f.text_area :content %><br>

  <%= f.submit "SEND" %>

<% end %>