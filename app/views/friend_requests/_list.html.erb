<% if !user.pending_requests.empty? %>
  <h3>friend requests</h3>
  You have friend requests from:
  <ul>
  <% user.pending_requests.each do |req| %>
    <li>
      <%= link_to req.sender.full_name, user_url(req.sender) %>
      <%= button_to "Accept", user_friend_request_url(req.sender_id, req.id, :status => "accepted"), :method => :put %>
      <%= button_to "Reject", user_friend_request_url(req.sender_id, req.id, :status => "rejected"), :method => :put %>
    </li>
  <% end %>
  </ul>
<% end %>