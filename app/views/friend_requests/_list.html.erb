<% if user.sent_requests %>
  <h3>friend requests</h3>
  You have friend requests from:
  <%= user.sent_requests.each do |req| %>
    <% user = User.find(req.sender_id) %>
    <%= link_to req.user.full_name, user_url(user) %>
    <%= button_to "Accept", user_friend_request_url, {:status => "accepted"} %>
    <%= button_to "Reject", user_friend_request_url, {:status => "rejected"} %>
  <% end %>
<% end %>