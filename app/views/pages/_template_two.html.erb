<!-- Sizes dummy to fit window -->
<% w = 400 %> <!-- based on container size -->
<% b = 2 %> <!-- border width, in css -->
<% m = 10 %> <!-- margin size, in css -->
<% h = w * project.trim_height / project.trim_width %>
<% ch = 150 %> <!-- caption height -->
<% pc = project.page_count %>

<!-- Sets page content -->
<% if project.self_ends == true %>
  <!-- for self-ends -->
	<% beg_page_content = [nil, "pastedown", "endpaper", "endpaper", "copyright", "title page"] %>
	<% end_page_content = ["pastedown", "endpaper", "endpaper"] %>
<% else %>
  <!-- for colored ends -->
  <% beg_page_content = [nil, "copyright", "title page"] %>
	<% end_page_content = [] %>
<% end %>

<section id='dummy-with-text' style='width:<%= w * 2 + m %>px; height:<%= h + 2 * b + ch %>px;'>
  <div id='dummy' style='width:<%= w * (pc + b) %>px; height:<%= h + b * 2 %>px;'>

		<% project.page_count.times do |i| %>
			<% if i == 0 %>
				<% page_class = "blank" %>
			<% elsif i % 2 == 1 %>
				<% page_class = "page recto cropped droppable" %>
			<% else %>
				<% page_class = "page verso cropped droppable" %>
			<% end %>
			
			<div class="<%= page_class %>" style="width:<%= w %>px; height:<%= h %>px;">
		  	<p><% unless i == 0 %><%= i %><% end %></p>
		  	<p class="page-content"><%= beg_page_content[i] %><%= end_page_content[i-pc] %></p>
			
				<%#= form_for image do |f| %>
					<%#= f.hidden :file %>
				<%# end %>
	
				<% unless image.blank? %>
					<%= image_tag image.file.url %>
				<% end %>								
			</div>
			
			<!-- <div class="page-text">
	      <div class="text draggable" style="width:<%= w %>px; height:<%= ch %>px; top:<%= h %>px;">
	        <%= project.pages[i].caption.content %>
	      </div>

	      <div class="text-update-form is-off" style="width:<%= w + 2 * b %>px; height:<%= ch %>px; top:<%= h %>px;">
	        <% caption = project.pages[i].caption %>
	        <%= form_for caption, :url => page_caption_url(caption.page), :method => :put do |f| %>
	          <%= f.text_area :content %>
	        <% end %>
	      </div>
			</div> -->
		<% end %>

  </div>
</section>


