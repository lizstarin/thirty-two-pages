<%= form_for @profile, :url => user_profile_path(@profile.user), :method => :put do |f| %>

  <div><%= f.label :first_name %><br>
  <%= f.text_field :first_name %></div>

  <div><%= f.label :last_name %><br>
  <%= f.text_field :last_name %></div>

  <div><%= f.label :city %><br>
  <%= f.text_field :city %></div>

  <div><%= f.label :state %><br>
  <%= f.text_field :state %></div>

  <div><%= f.label :country %><br>
  <%= f.text_field :country %></div>

  <div><%= f.label :bio %><br>
  <%= f.text_area :bio %></div>

  <div><%= f.file_field :avatar %></div>

  <div><%= f.submit "Update your profile" %></div>

<% end %>

