<li class="comment">
  <div class="comment-avatar"><a href="<%= user_url(@comment.user) %>"><%= image_tag @comment.user.avatar.url(:bitty) %></a></div>
  <span class="comment-user"><%= @comment.user.full_name %></span>
  <span class="comment-date"><%= time_ago_in_words(@comment.created_at) %> ago</span>
  <div class="comment-content"><%= @comment.content %></div>
</li>
