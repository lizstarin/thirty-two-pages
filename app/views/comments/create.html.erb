<li class="comment">
  <div class="comment-avatar">
		<a href="<%= user_url(@comment.user) %>">
			<% if !@comment.user.avatar_file_name.blank? %>
				<%= image_tag @comment.user.avatar.url(:bitty) %>
			<% else %>
				<div class="user-avatar-bitty-blank">?</div>
			<% end %>
		</a>
  </div> 
	<span class="comment-user"><%= @comment.user.full_name %></span>
  <span class="comment-date"><%= time_ago_in_words(@comment.created_at) %> ago</span>
  <div class="comment-content"><%= @comment.content %></div>
</li>
